<Window x:Class="SmartBookReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartBook Reader" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" />
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Preferences" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" />
            </MenuItem>
        </Menu>
        <TextBox Name="txtBookContent" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                 Margin="10" AcceptsReturn="True" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" />
        <Button Name="btnConvert" Content="Convert to Audio" 
                VerticalAlignment="Bottom" Margin="10" Click="ConvertToAudio_Click"/>
        <Button Name="btnStream" Content="Start Streaming" 
                VerticalAlignment="Bottom" Margin="10,0,10,40" Click="StartStreaming_Click"/>
    </Grid>
</Window>