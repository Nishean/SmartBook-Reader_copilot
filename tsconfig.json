{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./shared"
  },
  "include": [
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "android",
    "windows"
  ]
}